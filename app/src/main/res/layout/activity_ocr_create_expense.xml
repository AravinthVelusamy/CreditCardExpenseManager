<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ve.com.abicelis.creditcardexpensemanager.ocr.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ve.com.abicelis.creditcardexpensemanager.ocr.camera.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ve.com.abicelis.creditcardexpensemanager.ocr.camera.CameraSourcePreview>

    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:background="#99993322"
        android:layout_gravity="bottom|right">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bill"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:id="@+id/create_expense_txt_receipt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/receipt_text_size_title"
                android:textColor="@color/receipt_text_title"
                android:textStyle="bold"
                android:text="Receipt"/>

            <TextView
                android:id="@+id/create_expense_txt_receipt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_expense_txt_receipt_title"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/receipt_text_size_date"
                android:text="Date: 2016/05/23"/>

            <TextView
                android:id="@+id/create_expense_txt_receipt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_expense_txt_receipt_date"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/receipt_text_size_description"
                android:text="Description: Pizza with vicky!"/>


            <TextView
                android:id="@+id/create_expense_txt_receipt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:textSize="@dimen/receipt_text_size_total"
                android:text="Total: 60930.92"/>

        </RelativeLayout>


    </RelativeLayout>


    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/create_expense_fab_prev"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_previous"
        fab:fab_size="normal" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/create_expense_fab_next"
        fab:fab_showAnimation="@anim/fab_slide_in_from_right"
        fab:fab_hideAnimation="@anim/fab_slide_out_to_right"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="124dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_next"
        fab:fab_size="normal" />


</FrameLayout>
