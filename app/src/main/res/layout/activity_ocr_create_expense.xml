<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_expense_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ve.com.abicelis.creditcardexpensemanager.ocr.camera.CameraSourcePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ve.com.abicelis.creditcardexpensemanager.ocr.camera.GraphicOverlay
            android:id="@+id/graphicOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ve.com.abicelis.creditcardexpensemanager.ocr.camera.CameraSourcePreview>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/create_expense_ocr_window_container"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="4"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/create_expense_ocr_window"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ocr_window_background"
                    />

                <ImageView
                    android:id="@+id/create_expense_ocr_window_resizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#99772299"
                    android:src="@android:drawable/btn_star_big_on"
                    />


            </RelativeLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/create_expense_txt_detected_text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:maxLines="4"
                android:ellipsize="end"
                android:background="@color/textColorPrimary"
                android:text="Description:"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99333399">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="38dp"
                    android:layout_marginRight="38dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/receipt_background"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="80dp"
                    android:paddingRight="80dp">
                    <TextView
                        android:id="@+id/create_expense_txt_receipt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:textSize="@dimen/receipt_text_size_title"
                        android:textColor="@color/receipt_text_title"
                        android:textStyle="bold"
                        android:text="Receipt"/>

                    <TextView
                        android:id="@+id/create_expense_txt_receipt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/create_expense_txt_receipt_title"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/receipt_text_size_date"
                        android:text="Date: 2016/05/23"/>

                    <TextView
                        android:id="@+id/create_expense_txt_receipt_description_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/create_expense_txt_receipt_date"
                        android:layout_marginTop="0dp"
                        android:textSize="@dimen/receipt_text_size_description"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="@string/activity_ocr_create_expense_label_description"/>
                    <TextView
                        android:id="@+id/create_expense_txt_receipt_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/create_expense_txt_receipt_description_label"
                        android:textSize="@dimen/receipt_text_size_description"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="-"/>


                    <TextView
                        android:id="@+id/create_expense_txt_receipt_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:textSize="@dimen/receipt_text_size_total"
                        android:text="@string/activity_ocr_create_expense_label_total"/>
                    <TextView
                        android:id="@+id/create_expense_txt_receipt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/create_expense_txt_receipt_total_label"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/receipt_text_size_total"
                        android:lines="1"
                        android:text="-"/>

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/create_expense_fab_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="98dp"
        android:layout_marginRight="22dp"
        fab:fab_showAnimation="@anim/fab_scale_up"
        fab:fab_hideAnimation="@anim/fab_scale_down"
        android:src="@android:drawable/ic_media_previous"
        fab:fab_size="mini" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/create_expense_fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="12dp"
        fab:fab_showAnimation="@anim/fab_scale_up"
        fab:fab_hideAnimation="@anim/fab_scale_down"
        android:src="@android:drawable/ic_media_next"
        fab:fab_size="normal" />



</FrameLayout>
